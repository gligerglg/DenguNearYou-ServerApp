<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.gayanlakshitha.dengueanalyzeserver.MapsActivity"
            android:layout_alignTop="@+id/txt_maplocation"
            android:layout_alignParentStart="true" />



        <Button
            android:id="@+id/btn_getLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_maplocation"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:text="Set Location"
            android:background="@color/risk"
            android:textColor="#ffffff"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/txt_maplocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:layout_marginTop="0dp"
            android:inputType="textPersonName"
            android:text="Colombo"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@color/colorPrimary" />


    </RelativeLayout>
</LinearLayout>